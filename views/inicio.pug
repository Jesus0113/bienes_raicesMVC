
extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Ubicacion en el mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold shadow-md p-3 hover:bg-slate-200" ) Filtrar Propiedades

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione -
                    each categoria in categorias
                        option(value=categoria.id)= categoria.nombre

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") - Seleccione -
                    each precio in precios
                        option(value=precio.id)= precio.nombre  

        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5 space-y-5 shadow p-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas
                    include ./templates/card

            a(href="/categorias/1" class="bg-slate-500 hover:bg-slate-700 w-full text-center items-center block font-bold text-white m-auto p-2 uppercase md:w-60 md:rounded-lg md:m-auto") Ver Mas 

        section(class="py-5 space-y-5 shadow p-3")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en Venta

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in departamentos
                    include ./templates/card

            a(href="/categorias/2" class="bg-slate-500 hover:bg-slate-700 w-full text-center items-center block font-bold text-white m-auto p-2 uppercase md:w-60 md:rounded-lg md:m-auto") Ver Mas 

        if terrenos
            section(class="py-5 space-y-5 shadow p-3")
                h2(class="text-center text-4xl font-extrabold pt-10") Terrenos en Venta

                div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                    each propiedad in terrenos
                        include ./templates/card

                a(href="/categorias/4" class="bg-slate-500 hover:bg-slate-700 w-full text-center items-center block font-bold text-white m-auto p-2 uppercase md:w-60 md:rounded-lg md:m-auto") Ver Mas 

        if bodegas
            section(class="py-5 space-y-5 shadow p-3")
                h2(class="text-center text-4xl font-extrabold pt-10") Bodegas en Venta 

                div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                    each propiedad in bodegas
                        include ./templates/card

                a(href="/categorias/3" class="bg-slate-500 hover:bg-slate-700 w-full text-center items-center block font-bold text-white m-auto p-2 uppercase md:w-60 md:rounded-lg md:m-auto") Ver Mas
 
                     




block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")



